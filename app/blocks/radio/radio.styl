.radio__radio
	position absolute
	top px_to_em(2, 22)
	left 0
	width 30px
	height 30px
	background url('/assets/images/radio-out.png') no-repeat 0 0
	outline 1px solid tomato
	transition(all .4s ease 0s)

	&:hover
		opacity .6

	&::after
		position absolute
		width 100%
		height 100%
		content ''
		background url('/assets/images/radio-in.png') no-repeat 0 0
		transition(all .4s ease 0s)

input[type='radio']
	display none

	&:not(:checked) + .radio__radio::after
		// background none
		background-size 0 0

	&:checked + .radio__radio::after
		// background url('/assets/images/radio-in.png') no-repeat 0 0
		background-size auto
