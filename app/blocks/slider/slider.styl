/* Slider module */

.slider
	position relative
	display block
	background url('../images/line-horizontal.png') no-repeat -6px -8px
	background-size 101% 60px
	
	padding-top 48px
	clearfix()	
	stop_user_select()

.slider__thumb 
	position absolute
	top 1px
	left 367px
	width 17px
	height 15px
	background url('../images/triangle.png') no-repeat 0 0

.slider__item
	position relative
	width 30%
	
	&:first-child
		width 19%

	&:last-child
		width 21%
		text-align right

	&::before
		position absolute
		top -28px
		left -1px
		width 4px
		height 26px
		content ''
		background url('../images/line-vertical.png') no-repeat -7px -1px
		

	&:nth-child(2)::before,
	&:nth-child(3)::before
		left 2.5px
		background-position -7px -13px

	&:last-child::before
		top -29px
		right -3px
		left auto
		